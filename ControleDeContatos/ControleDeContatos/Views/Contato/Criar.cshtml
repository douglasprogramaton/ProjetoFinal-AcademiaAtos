@model ContatoModel
@{
    ViewData["TitLe"] = "Criar contato";
}
<div class="text-center">

    <h1 class="display-4"> Adicionar Contatos</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">@*quando ele clicar no criar ele vai pegar o post do criar metodo criar no caso*@

    <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
    
    @Html.ValidationMessageFor(x=>x.Name)
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
    @Html.ValidationMessageFor(x=>x.Email)
  </div>
    <div class="form-group">
    <label for="celular">Telefone</label>
    <input type="tel" asp-for="Celular" class="form-control" placeholder="(xx)xxxxx-xxxx">
    @Html.ValidationMessageFor(x=>x.Celular)
  </div>

 
  <button type="submit" class="btn btn-primary">Adicionar</button>
  @* quando clicar ele vai voltar para index do contato *@               
  <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
