@using ControleDeContatos.Enuns
@model UsuarioModel
@{
    ViewData["TitLe"] = "Criar Usuario";
}
<div class="text-center">

    <h1 class="display-4">Cadastrar Usuario</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">@*quando ele clicar no criar ele vai pegar o post do criar metodo criar no caso*@

    <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do usuario">
    
    @Html.ValidationMessageFor(x=>x.Name)
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do Usuario">
    @Html.ValidationMessageFor(x=>x.Email)
  </div>
    <div class="form-group">
    <label for="login">Login</label>
    <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do Usuario">
    @Html.ValidationMessageFor(x=>x.Login)
  </div>

   
    <div class="form-group">
    <label for="perfil">Perfil</label>
    <input type="text" asp-for="Perfil" class="form-control" placeholder="Digite o login do Usuario">
   <select asp-for="Perfil">
       <option value="0">Selecionar</option>
       <option value="@PerfilEnum.Admin">Administrador</option>
       <option value="@PerfilEnum.Padrao">Padrão</option>
   </select>
  </div>
      <div class="form-group">
    <label for="Password">Nome</label>
    <input type="password" asp-for="Senha" class="form-control" placeholder="Digite Sua senha ">
    
    @Html.ValidationMessageFor(x=>x.Senha)
  </div>

 
  <button type="submit" class="btn btn-primary">Adicionar</button>
  @* quando clicar ele vai voltar para index do contato *@               
  <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
