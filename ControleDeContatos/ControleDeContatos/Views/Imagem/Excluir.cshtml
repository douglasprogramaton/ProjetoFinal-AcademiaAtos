@using CadastrosBiblioteca.Models
@model ImagemModel
@{
    ViewBag.Titulo = "Exclusão de Imagem";
}
<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="@Model.IdImagem" name="id">
    <div class="mt-3">
        <h3>Tem certeza que deseja excluir a imagem <b>@Model.Titulo</b>?</h3>
    </div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Imagem" asp-route-id="@Model.IdGaleria"
            class="btn btn-secondary">Cancelar</a>
        <button class="btn btn-danger" type="submit">Excluir</button>
    </div>
</form>