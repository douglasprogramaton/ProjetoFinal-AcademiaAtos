@using CadastrosBiblioteca.Models
@model GaleriaModel
@{
    
    ViewData["Title"] = "Apagar galeria";
}

<div class="text-center">
    <h3>Realmente deseja apagar a galeria(@Model.Titulo)?</h3>
</div>

<a class="btn btn-primary" asp-controller="Galeria" asp-action="Index" role="button">Cancelar</a>
<a class="btn btn-danger"  asp-route-id="@Model.IdGaleria" asp-controller="Galeiras" asp-action="Apagarconfirmar" role="button">Confirmar</a>
